<% content_for :title, "New documentary film" %>

<h1>Nuevo Documental</h1>

<%= form_with model: @documentary_film, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :synopsis %>
    <%= form.text_area :synopsis, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :director %>
    <%= form.text_field :director, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit 'Crear Documental', class: 'btn btn-success' %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Volver a Documentales", documentary_films_path, class: "btn btn-primary" %>
</div>
